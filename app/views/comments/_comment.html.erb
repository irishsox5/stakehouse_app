<li id='comment_<%= comment.id %>' class="media">
  <div class="media-left">
    <%= image_tag comment.user.image_url %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.username %></h4>

    <%= comment.content %><br>

  <small class="data-object">
    <%= time_ago_in_words(comment.created_at) %> ago
    <% if current_user == comment.user %>
    <%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-default btn-xs" %>
    <%= link_to 'Delete', comment_url, :method => :delete, class: "btn btn-default btn-xs", :remote => true  %>
    <% end %>
  </small>
  </div>
</li>

