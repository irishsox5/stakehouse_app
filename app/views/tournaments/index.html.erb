<p id="notice"><%= notice %></p>

<h1>Listing Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Location</th>
      <th>Start time</th>
      <th>Start date</th>
      <th>Structure</th>
      <th>Buy in</th>
      <th>Guarantee</th>
      <th>Event length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.event %></td>
        <td><%= tournament.location %></td>
        <td><%= tournament.start_time %></td>
        <td><%= tournament.start_date %></td>
        <td><%= tournament.structure %></td>
        <td><%= tournament.buy_in %></td>
        <td><%= tournament.guarantee %></td>
        <td><%= tournament.event_length %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

