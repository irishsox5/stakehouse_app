<!-- top section starts here-->
<% if current_user %>
<div class="top-menu">
  <div class="container">
    <div class="navbar-header ">
     <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
       <span class="sr-only">Toggle navigation</span>
       <span class="icon-bar"></span>
       <span class="icon-bar"></span>
       <span class="icon-bar"></span>
     </button>
     <h1 class="logo navbar-brand pull-left">$takeHouse</h1>
   </div>
   <nav class="navbar navbar-default" role="navigation">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input id="users" type="text" name="user" class="typeahead form-control" placeholder="Find players..." autocomplete="off" />
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>
    <div class="collapse navbar-collapse navbar-right">
      <ul class="nav navbar-nav topNav">

        <li><%= link_to "Home", users_url %></li>
        <li><%= link_to current_user.username, user_url(current_user.id) %></li>
        <li class="dropdown customDropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Stakings
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li> &nbsp;<%= link_to "Player Requesting Stake", tours_url %></li>
              <li>&nbsp;<%= link_to "Investor Offering Stake", stakes_url %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a data-toggle="dropdown" tabindex="0" aria-expanded="false"><%= image_tag current_user.image_url %> <%= current_user.username %><span class="caret"></span></a>

            <!-- role="menu": fix moved by arrows (Bootstrap dropdown) -->
            <ul role="menu" class="dropdown-menu">
              <li><a tabindex="0"><span class="glyphicon glyphicon-info-sign"></span> &nbsp;My Account</a></li>
              <li><a tabindex="0"><span class="glyphicon glyphicon-cog"></span> &nbsp;Settings</a></li>
              <li><%= link_to 'SignOut', signout_path, :class=>"glyphicon glyphicon-cog"%></li>
            </ul>
            <% end %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
      <!-- /.container-fluid -->
    </nav>
  </div>
</div>
